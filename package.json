{
  "name": "duplo-backend-assessment",
  "version": "1.0.0",
  "description": "This repository houses code built in partial fulfilment of the interview process for a midlevel backend engineer role at Duplo.",
  "main": "server.js",
  "pretest": "",
  "pretest:coverage": "",
  "keywords": [],
  "author": "Victor Uche",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node --files src",
    "build": "tsc",
    "migrate": "npx prisma migrate deploy",
    "migrate:new": "npx prisma migrate dev --name",
    "start:dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest --forceExit --detectOpenHandles --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --forceExit --detectOpenHandles --coverage --silent",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/fastify-jwt": "^0.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.25.2",
    "fastify-jwt": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
